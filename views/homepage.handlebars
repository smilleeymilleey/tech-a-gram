<!-- Loop over each object in the projects array -->
{{#each posts as |post| }}
<div class="row mb-4 project">
    <div>
      <img id="image-sizing" src="{{post.imageUrl}}" alt="">
    </div>

  <div class="col-md-5">
    <h2>
      <a href="/post/{{post.id}}">{{post.name}}</a>
    </h2>
    <p class="image-text">Created by {{post.user.name}}</p>
  </div>
  <div class="col-md-7">
    <p class="image-text">
      {{post.description}}
    </p>
  </div>
</div>
{{/each}}