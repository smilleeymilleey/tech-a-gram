<div class="row mt-4">
  <div class="col-md-6">
    <h5>Make a new post!</h5>

    <form class="form new-project-form">
      <div class="form-group">
        <label for="project-name">Choose an image</label>
        <div>
          <button id="postBtn">Button</button>
        </div>
      </div>
      <div class="form-group">
        <label for="project-desc">Your description:</label>
        <textarea class="form-input" id="project-desc" name="project-desc"></textarea>
      </div>
      <div class="form-group">
        <button type="submit" class="btn btn-primary">Submit</button>
      </div>
    </form>
  </div>

  {{!-- test area end --}}


  <div class="col-md-6 project-list">
    <h3>Current Projects:</h3>

    {{#each posts as |post|}}
    <div class="row mb-2">
      <div class="col-md-8">
        <h4><a href="/posts/{{post.id}}">{{post.description}}</a></h4>
      </div>
      <div class="col-md-4">
        <button class="btn btn-sm btn-danger" data-id="{{post.id}}">DELETE</button>
      </div>
    </div>
    {{/each}}
  </div>

</div>

