<!-- Loop over each object in the projects array -->
{{#each posts as |post| }}
<div class="row mb-4 project">

  <div class="col-md-5">
    <h2>
      <a href="/post/{{post.id}}">{{post.name}}</a>
    </h2>
    <div>
      <img src="{{post.imageUrl}}" alt="">
    </div>
    <p>Created by {{post.user.name}}</p>
  </div>
  <div class="col-md-7">
    <p>
      {{post.description}}
    </p>
  </div>
</div>
{{/each}}